{
  "name": "rigtch-fm-www",
  "description": "rigtch.fm is focused on displaying your all-time statistics such as favorite artists, most listened songs etc.",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "bun run lint:js && bun run lint:css && bun run typecheck",
    "lint:js": "eslint --ext \".js,.ts,.md,.jsx,.tsx,.mdx\" --ignore-path .gitignore --resolve-plugins-relative-to .",
    "lint:css": "stylelint \"**/*.{sass,scss,pcss,postcss,css}\" --allow-empty-input --ignore-path .gitignore",
    "lint:fix": "bun run lint:js --fix",
    "format": "prettier --write .",
    "typecheck": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:update": "vitest -u",
    "test:coverage": "vitest run --coverage",
    "shadcn-ui": "npx shadcn-ui@latest",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "commit": "cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
